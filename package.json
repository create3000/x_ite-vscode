{
  "name": "x-ite-vscode",
  "publisher": "create3000",
  "displayName": "X_ITE VS Code Extension",
  "description": "Preview and debug X3D, glTF, VRML and other 3D models directly in the editor.",
  "version": "1.0.3",
  "icon": "resources/icon.png",
  "repository": {
    "url": "https://github.com/create3000/x_ite-vscode"
  },
  "keywords": [
    "X3D",
    "X3DV",
    "X3DJ",
    "VRML",
    "WRL",
    "glTF",
    "OBJ",
    "STL",
    "PLY",
    "SVG",
    "3D",
    "model"
  ],
  "galleryBanner": {
    "color": "#383838",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onLanguage:X3D",
    "onLanguage:xml",
    "onLanguage:json",
    "onLanguage:wavefront-obj",
    "onLanguage:plaintext"
  ],
  "main": "./src/extension.js",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "22.7.4",
    "eslint": "^9.11.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "contributes": {
    "commands": [
      {
        "command": "x_ite-vscode.preview-model",
        "title": "X3D: Preview 3D Model",
        "icon": {
          "dark": "./resources/icon.png",
          "light": "./resources/icon.png"
        }
      }
    ],
    "keybindings": [
      {
        "command": "x_ite-vscode.preview-model",
        "key": "alt+x",
        "mac": "alt+x",
        "when": "editorTextFocus && x_iteFileActive"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "x_ite-vscode.preview-model",
          "when": "x_iteFileActive",
          "group": "X3D"
        }
      ],
      "editor/title": [
        {
          "command": "x_ite-vscode.preview-model",
          "when": "x_iteFileActive",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "x_ite-vscode.preview-model",
          "when": "x_iteFileActive",
          "group": "X3D"
        }
      ]
    }
  }
}
